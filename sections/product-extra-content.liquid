{{ 'section-product-extra-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="product-extra-content color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding" data-section-id="{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="title-wrapper">
        <h2 class="title h2">{{ section.settings.heading | escape }}</h2>
      </div>
    {%- endif -%}

    <div class="product-extra-content__wrapper">
      {%- comment -%} Product Story {%- endcomment -%}
      {%- if section.settings.show_story and product.description != blank -%}
        <div class="product-extra-content__story">
          <div class="product-extra-content__story-content rte">
            {{ product.description }}
          </div>
        </div>
      {%- endif -%}

      {%- comment -%} FAQs {%- endcomment -%}
      {%- if section.settings.show_faqs and section.blocks.size > 0 -%}
        <div class="product-extra-content__faqs">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'faq' -%}
                <div class="product-extra-content__faq" {{ block.shopify_attributes }}>
                  <details class="faq__details">
                    <summary class="faq__summary">
                      <h3 class="faq__question h4">{{ block.settings.question | escape }}</h3>
                      <span class="faq__icon" aria-hidden="true">
                        <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M6 1V11M1 6H11" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                      </span>
                    </summary>
                    <div class="faq__answer rte">
                      {{ block.settings.answer }}
                    </div>
                  </details>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product extra content",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Product Details",
      "label": "Heading"
    },
    {
      "type": "checkbox",
      "id": "show_story",
      "default": true,
      "label": "Show product story",
      "info": "Displays the full product description"
    },
    {
      "type": "checkbox",
      "id": "show_faqs",
      "default": true,
      "label": "Show FAQs"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background",
          "label": "Background"
        },
        {
          "value": "accent",
          "label": "Accent"
        },
        {
          "value": "primary",
          "label": "Primary"
        }
      ],
      "default": "accent",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "default": "Frequently asked question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "answer",
          "default": "<p>Answer to the frequently asked question.</p>",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product extra content",
      "blocks": [
        {
          "type": "faq"
        },
        {
          "type": "faq"
        }
      ]
    }
  ]
}
{% endschema %}

