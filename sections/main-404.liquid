{{ 'section-404.css' | asset_url | stylesheet_tag }}

<div class="error-404 color-background section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="error-404__content">
      <h1 class="error-404__title h0">{{ 'templates.404.title' | t }}</h1>
      <p class="error-404__text">{{ 'templates.404.subtext' | t }}</p>
      <a href="{{ routes.root_url }}" class="button button--primary">
        {{ 'general.continue_shopping' | t }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404 page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 96
    }
  ]
}
{% endschema %}

