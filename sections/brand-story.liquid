{{ 'section-brand-story.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="brand-story color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="brand-story__grid grid grid--1-col grid--2-col-tablet">
      {%- if section.settings.image_position == 'left' -%}
        <div class="grid__item brand-story__media">
          {%- if section.settings.image != blank -%}
            <div class="brand-story__media-wrapper">
              {{ section.settings.image | image_url: width: 1500 | image_tag:
                loading: 'lazy',
                width: section.settings.image.width,
                height: section.settings.image.height,
                sizes: '(min-width: 1100px) 550px, (min-width: 750px) calc((100vw - 130px) / 2), calc(100vw - 50px)',
                widths: '165, 360, 535, 750, 1070, 1500'
              }}
            </div>
          {%- else -%}
            <div class="brand-story__media-wrapper">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div class="grid__item brand-story__content">
        <div class="brand-story__content-wrapper">
          {%- if section.settings.heading != blank -%}
            <h2 class="brand-story__heading h2">
              {{ section.settings.heading | escape }}
            </h2>
          {%- endif -%}
          {%- if section.settings.text != blank -%}
            <div class="brand-story__text rte">
              {{ section.settings.text }}
            </div>
          {%- endif -%}
          {%- if section.settings.button_label != blank -%}
            <div class="brand-story__button">
              <a
                {% if section.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.button_link }}"
                {% endif %}
                class="button button--secondary"
              >
                {{ section.settings.button_label | escape }}
              </a>
            </div>
          {%- endif -%}
        </div>
      </div>

      {%- if section.settings.image_position == 'right' -%}
        <div class="grid__item brand-story__media">
          {%- if section.settings.image != blank -%}
            <div class="brand-story__media-wrapper">
              {{ section.settings.image | image_url: width: 1500 | image_tag:
                loading: 'lazy',
                width: section.settings.image.width,
                height: section.settings.image.height,
                sizes: '(min-width: 1100px) 550px, (min-width: 750px) calc((100vw - 130px) / 2), calc(100vw - 50px)',
                widths: '165, 360, 535, 750, 1070, 1500'
              }}
            </div>
          {%- else -%}
            <div class="brand-story__media-wrapper">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Brand story",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Image position"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Expert Skincare. For Everyone.",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>We're democratizing skincare by blending the best of nature—pure, organic ingredients—with the power of AI. We're your partner in skin health, here to provide a smarter, more personal path to your best skin.</p>",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Learn Our Mission",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "background",
          "label": "Background"
        },
        {
          "value": "accent",
          "label": "Accent"
        },
        {
          "value": "primary",
          "label": "Primary"
        }
      ],
      "default": "background",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 96
    }
  ],
  "presets": [
    {
      "name": "Brand story"
    }
  ]
}
{% endschema %}

